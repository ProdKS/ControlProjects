<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - СДО КГАПОУ "Авиатехникум"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManagingIndividualProjects.styles.css" asp-append-version="true" />
</head>
<body>
    @if (ViewContext.RouteData.Values["Action"].ToString() != "Authorization")
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">СДО КГАПОУ "Авиатехникум"</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (ViewContext.RouteData.Values["Action"].ToString() == "Index")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                                </li>
                            }
                            @if(ViewBag.CurrentRole == 1)
                            {
                                
                            }
                            else if (ViewBag.CurrentRole == 2)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ClassroomPage" asp-action="ClassroomPage">Группы</a>
                                </li>
                            }
                            else if (ViewBag.CurrentRole == 3)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="TeacherPage" asp-action="TeacherPage">Страница учителя</a>
                                </li>
                            }                           
                            else if (ViewBag.CurrentRole == 4)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ZvPage" asp-action="ZvPage">Группы</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="StudentViewEmploye" asp-action="StudentViewEmploye">Студенты</a>
                                </li>
                            }
                            else if (ViewBag.CurrentRole == 5)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="DepartmentPage" asp-controller="DepartmentPage" asp-action="DepartmentListView">Отделения</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="GroupView" asp-action="GroupView">Группы</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="StudentView" asp-action="StudentView">Студенты</a>
                                </li>
                            }
                        </ul>
                        @if(ViewContext.RouteData.Values["Action"].ToString() == "Index")
                        {
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Authorization" asp-action="Authorization">Вход</a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
