@model GroupsForClassroom
@{
    ViewData["Title"] = "Классный руководитель страница(группы)";
}
<body>
    <div class="title-div">
        @if(Model.Groups.Count == 0)
        {
            <h1 class="title">У вас нет групп</h1>
        }
        else
        {
            <h1 class="title">Ваши группы</h1>
        }       
    </div>
    <div style="flex-wrap: wrap; display: flex">
        @foreach (var groups in Model.Groups)
        {
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column" style="margin-top: 10px; margin-right: 10px; width:30%">
                <div class="card bg-light d-flex flex-fill">
                    <div class="card-header text-muted border-bottom-0">Название группы: @groups.Name</div>
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col-7" style="width: 100%">
                                <h2 class="lead"><b></b></h2>
                                <p class="text-muted text-sm"><b>Количество студентов: <b>@Model.StudentCounts[groups.Id]</b></b></p>
                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                            <a href="@Url.Action("ClassroomPageView", "ClassroomPage", new { groupid = groups.Id })" class="btn btn-sm btn-primary">
                                <i class="fas fa-user"></i> Подробнее
                            </a>
                            <a href="@Url.Action("GenerateDocGroup", "DepartmentPage", new { groupid = groups.Id })" class="btn btn-sm btn-primary">
                                <i class="fas fa-user"></i> Генерация отчета по группе
                            </a>
                            @* <a href="@Url.Action("GenerateDocDebtorsGroup", "DepartmentPage", new { groupid = groups.Id })" class="btn btn-sm btn-primary" style="margin-top: 5px">
                                <i class="fas fa-user"></i> Генерация отчета по должникам
                            </a> *@
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
