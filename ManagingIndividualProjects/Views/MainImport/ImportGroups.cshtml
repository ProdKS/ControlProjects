@{
    ViewData["Title"] = "Import Groups";
    var departments = ViewBag.Departments as List<ManagingIndividualProjects.Models.Department>;
}

<div class="container">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Импорт групп</h3>
        </div>
        <form asp-action="ImportGroups" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label for="myDropdown">Выберите отделение:</label>
                    <select id="myDropdown" name="selectedDepartmentId" class="form-control">
                        @foreach (var department in departments)
                        {
                            <option value="@department.Id">@department.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Выберите файл</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" name="file" class="custom-file-input" id="exampleInputFile">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-sm btn-primary" style="margin-top:5px">Импорт</button>
                <a href="@Url.Action("ImportGroupsEmployee", "MainImport")" class="btn btn-sm btn-primary" style="margin-top:5px">
                    <i class="fas fa-user"></i> Задать группам предметы
                </a>
                <a href="@Url.Action("goToSubjects", "MainImport")" class="btn btn-sm btn-primary" style="margin-top: 5px; float: right;">
                    <i class="fas fa-user"></i> Назад
                </a>
            </div>
        </form>
    </div>
</div>
