@model List<FilesStudent>

<div class="container">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Изменение/удаление ZIP файлов</h3>
        </div>
        <div class="card-body">
            @foreach (var file in Model)
            {
                <div>
                    <p>Имя файла: @file.FileName</p>
                    <form asp-action="EditDeleteFile" asp-route-fileId="@file.Id" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputFile">Выберите новый файл</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" name="file" class="custom-file-input" id="exampleInputFile">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary" style="margin-top: 5px;">Изменить</button>
                        <a href="@Url.Action("DownloadFile", "StudentPage", new { fileId = file.Id })" class="btn btn-sm btn-primary" style="margin-top: 5px;">
                            <i class="fas fa-download"></i> Скачать
                        </a>
                        <a href="@Url.Action("DeleteFile", "StudentPage", new { fileId = file.Id })" class="btn btn-sm btn-danger" style="margin-top: 5px;">
                            <i class="fas fa-trash"></i> Удалить
                        </a>
                    </form>
                </div>
            }
        </div>
        <div class="card-footer">           
            <a href="@Url.Action("goBack", "StudentPage")" class="btn btn-sm btn-primary" style="float: right;">
                <i class="fas fa-arrow-left"></i> Назад
            </a>
        </div>
    </div>
</div>
