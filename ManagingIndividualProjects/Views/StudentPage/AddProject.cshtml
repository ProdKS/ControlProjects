@model IndividualProjectModel
@{

}
<body>
    <div class="ContainerDeprtaments">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Добавление проекта</h3>
            </div>
            <form asp-action="AddProject" asp-controller="StudentPage" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    </div>
                    <label for="myDropdown">Выберите опцию:</label>
                    <select id="myDropdown" name="SelectedOption" class="form-control">
                        <option value="">Выберите...</option>
                        @foreach (var item in ViewBag.DataList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>
